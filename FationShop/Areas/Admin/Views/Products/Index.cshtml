@model IPagedList<FationShop.Areas.Admin.Framework.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;

<link rel="stylesheet" href="~/Assets/Client/assets/css/Pagination.css">

<p class="pt-3">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="m-0">SẢN PHẨM</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <div class="row mb-3">
                        <div class="col-lg-12 form-inline">
                            <div class="col-md-4 form-group">
                                <input type="text" class="form-control w-100" value="@ViewBag.searchString" name="searchString" />
                            </div>
                            <div class="col-md-4 form-group">
                                <button type="submit" class="btn btn-success form-control">Search</button>
                            </div>
                        </div>
                    </div>
                }
                <table class="table table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Name)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.MetaTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>*@
                        @*<th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.First().Image1)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Image2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MoreImage)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.First().Price)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.PromotionPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.First().CategoryID)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Detail)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.First().Status)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Size)
                            </th>*@
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.MetaTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>*@
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>*@
                            <td>
                                <img src="@Url.Content(item.Image1)" alt="@Model.First().Name" style="width: 100px" />
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Image2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MoreImage)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.PromotionPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryID)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Detail)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Size)
                                </td>*@
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>

                @Html.PagedListPager(Model, page => Url.Action("Index", "Products", new { page, ViewBag.searchString }))
            </div>
        </div>
    </div>

</div>


